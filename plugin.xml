<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="scalastyle-plugin.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="org.scalastyle.scalastyleplugin.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.scalastyle.scalastyleplugin.actions.SampleAction">
         </action>
      </actionSet>
   </extension>
   <extension
         id="ScalastyleBuilder"
         name="%ScalastyleBuilder.name"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run class="org.scalastyle.scalastyleplugin.builder.ScalastyleBuilder" />
      </builder>
   </extension>
   <extension
         id="ScalastyleNature"
         name="%ScalastyleNature.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.scalastyle.scalastyleplugin.nature.ScalastyleNature">
         </run>
      </runtime>
   </extension>

</plugin>
